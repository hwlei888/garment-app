
<%= form_with model: @brand, local: true do |f| %>

    <%= f.label :name %>
    <%= f.text_field :name %>
    <br><br>

    <%= f.label :country %>
    <%= f.text_field :country %>
    <br><br>

    <%= f.label :introduction %>
    <br>
    <%= f.text_area :introduction, size: "30*5" %>
    <br><br>

    <%= f.submit %>

<% end %>


