
<div class= "form_error">
<% if @brand.errors.any? %>

    <strong>Please correct the following errors: </strong>
    <ul>
        <% @brand.errors.full_messages.each do |e| %>
            <li><%= e %></li>
        <% end %>
    </ul>

<% end %>
</div>


<%= form_with model: @brand, local: true do |f| %>

    <div class= "brand_form_block">
    <%= f.label :name %>
    <%= f.text_field :name %>
    </div>


    <div class= "brand_form_block">
    <%= f.label :country %>
    <%= f.text_field :country %>
    </div>


    <div class= "brand_form_block">
    <%= f.label :introduction %>
    <br>
    <%= f.text_area :introduction, size: "30*5" %>
    </div>

    
    <div class= "brand_form_block">
    <%= f.submit %>
    </div>

<% end %>


