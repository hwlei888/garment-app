
<% if @occasion.errors.any? %>

    <strong>Please correct the following errors: </strong>
    <ul>
        <% @occasion.errors.full_messages.each do |e| %>
            <li><%= e %></li>
        <% end %>
    </ul>

<% end %>


<%= form_with model: @occasion, local: true do |f| %>

    <%= f.label :title %>
    <%= f.text_field :title %>
    <br><br>

    <%= f.submit %>

<% end %>

